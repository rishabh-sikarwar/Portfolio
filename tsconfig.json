{
  "compilerOptions": {
    "target": "es5", // Or your desired target
    "module": "commonjs", // Or your desired module system
    "jsx": "react-jsx", // or "react" if you are using a react version below 17
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
   "include": [
    "src/**/*" // Or your source file paths
  ]
}
